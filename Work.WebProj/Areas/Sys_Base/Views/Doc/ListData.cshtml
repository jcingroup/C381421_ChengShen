@model  IEnumerable<DotWeb.DocInfo>
@using DotWeb;

@{
    ViewBag.Caption = MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Title;
    ViewBag.MenuName = MvcSiteMapProvider.SiteMaps.Current.CurrentNode.ParentNode.Title;
}
@section IncludeCSS{}
@section IncludeScript{
    @Html.Partial("Manage/jsCommVar")
    <script>
        var Info_Insert_Success = '@Resources.Res.Info_Insert_Success';
        var Info_Update_Success = '@Resources.Res.Info_Update_Success';
    </script>
    @Scripts.Render("~/DocCtr")
}

@section sidebar{
    @Html.Partial("Manage/vucMenu")
}

<h3 class="title">
    <span>操作教學影片</span>
</h3>

<div class="alert alert-warning" role="alert">
    <p>1. 如無法觀看操作教學影片，請<a class="alert-link" href="http://get.adobe.com/shockwave/" target="new">按此下載 Flash 播放器</a>並安裝。</p>
    <p>2. 影片開啟後，可點選 <i class="fa-arrows-alt"></i> 圖示，以全螢幕方式觀看。</p>
</div>

<ul class="list-link">
    @foreach (DocInfo doc in Model)
    {
    <li><a href="@doc.Link" target="new"><i>@doc.Sort</i>@doc.Momo</a></li>
    }
</ul>
