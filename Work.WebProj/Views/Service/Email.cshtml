@{
    ViewBag.Title = "Email";
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <title>承信推高機網站 - 產品諮詢</title>
</head>
<body style="font: .8em/140% '微軟正黑體', 'Microsoft JhengHei', Helvetica, sans-serif;">
    <h1 style="font-size:1.5em;">承信推高機網站 - 產品諮詢</h1>
    <table border="1" bordercolor="#ddd" style="border:1px solid #ccc">
        <caption style="background:#FCF8E3; color:#9C7163; font-size:1.2em; font-weight:bold; padding:5px; text-align:center;">
            以下為聯絡人資料
        </caption>
        <tr>
            <td style="color:#9C7163; padding:5px; border:1px solid #ccc">姓名</td>
            <td style="width:150px; padding:5px; border:1px solid #ccc" colspan="2">@Model.name</td>
            <td style="color:#9C7163; padding:5px; border:1px solid #ccc">性別</td>
            <td style="width:150px; padding:5px; border:1px solid #ccc" colspan="2">
                @if (Model.gender == "male")
                {
                    <span>男</span>
                }
                else if (Model.gender == "female")
                {
                    <span>女</span>
                }
            </td>
        </tr>
        <tr>
            <td style="color:#9C7163; padding:5px; border:1px solid #ccc">連絡電話</td>
            <td style="width:150px; padding:5px; border:1px solid #ccc" colspan="2">@Model.tel</td>
            <td style="color:#9C7163; padding:5px; border:1px solid #ccc">EMail</td>
            <td style="width:150px; padding:5px; border:1px solid #ccc" colspan="2">@Model.email</td>
        </tr>
        <tr>
            <td style="color:#9C7163; padding:5px; border:1px solid #ccc">諮詢內容</td>
            <td colspan="5" style="width:500px; height:100px; word-break:break-all; height:100px; padding:5px; border:1px solid #ccc">
                @Html.Raw(Model.opinion.Replace("\n", "<br/>"))
            </td>
        </tr>
    </table>
</body>
</html>

